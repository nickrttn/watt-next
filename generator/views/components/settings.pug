extends ../layout.pug

block content
	main
		form(method="post" action="/api/v1/settings") 
			label Multiplier
				if setting
					input#multiplier-input(type='range', name='multiplier', min='0', max='5' value=setting.multiplier, step='0.1')
					output#multiplier-output='x ' + setting.multiplier
				else
					input#multiplier-input(type='range', name='multiplier', min='0', max='5' value='0', step='0.1')
					output#multiplier-output
			input(type='submit', name='submit', value='Save')
